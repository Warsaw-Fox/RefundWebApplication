@model RefundWebApplication.Models.Domain.ComplaintModel

@{
    ViewData["Title"] = "Details";
}

<style>
.my-button {
    background-color: #333; 
    color: white; 
    padding: 5px 5px; /* Wielkość wypełnienia */

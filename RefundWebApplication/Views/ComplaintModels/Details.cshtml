<div>
     @if (User.IsInRole("Admin"))                {
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    <a asp-action="ComplaintList">Back to List</a>
     }
</div>

<form method="post" asp-controller="Pdf" asp-action="GeneratePdf">
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FirstName" />
    <input type="hidden" asp-for="LastName" />
    <input type="hidden" asp-for="Street" />
    <input type="hidden" asp-for="HouseNumber" />
    <input type="hidden" asp-for="PostalCode" />
    <input type="hidden" asp-for="City" />
    <input type="hidden" asp-for="Email" />
    <input type="hidden" asp-for="SerialNumber" />
    <input type="hidden" asp-for="IssueDescription" />
    <input type="hidden" asp-for="FixDescription" />
    <button type="submit" class="my-button">Generate PDF</button>
</form>



@* Wyświetlnie aktualnego statusu reklamacji na zwyklym ifie*@
@if (!string.IsNullOrEmpty(Model.Status))
{
    <div class="status-box">
        <h4>Status History</h4>
        <ul>
            @if (Model.Status == "Przyjęte")
            {
                <li>Przyjęte</li>
            }
            @if (Model.Status == "W Trakcie")
            {
                <li>Przyjęte</li>
                <li>W Trakcie</li>
            }
            @if (Model.Status == "Zakończone")
            {
                <li>Przyjęte</li>
                <li>W Trakcie</li>
                <li>Zakończone</li>
            }
        </ul>
    </div>
}

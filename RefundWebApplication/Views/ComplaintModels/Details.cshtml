<form method="post" asp-controller="Pdf" asp-action="GeneratePdf">
    <button type="submit">Generate PDF</button>
</form>


@* Wyświetlnie aktualnego statusu reklamacji na zwyklym ifie*@
@if (!string.IsNullOrEmpty(Model.Status))
{
    <div class="status-box">
        <h4>Status History</h4>
        <ul>
            @if (Model.Status == "Przyjęte")
            {
                <li>Przyjęte</li>
            }
            @if (Model.Status == "W Trakcie")
            {
                <li>Przyjęte</li>
                <li>W Trakcie</li>
            }
            @if (Model.Status == "Zakończone")
            {
                <li>Przyjęte</li>
                <li>W Trakcie</li>
                <li>Zakończone</li>
            }
        </ul>
    </div>
}
